<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th,
    td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }
  </style>
</head>

<body>
  <h1>Score Submit Log</h1>
  <table id="logTable">
    <thead>
      <tr>
        <th>Competition</th>
        <th>Team</th>
        <th>Score</th>
        <th>Submitted At</th>
      </tr>
    </thead>
    <tbody id="tableBody">
      <!-- Data will be dynamically inserted here -->
    </tbody>
  </table>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      fetch("/api/score-record")
        .then(response => response.json())
        .then(data => {
          const tableBody = document.querySelector("#tableBody");
          data.forEach(item => {
            const row = document.createElement("tr");
            row.innerHTML = `
              <td>${item.competition}</td>
              <td>${item.team}</td>
              <td>${item.score}</td>
              <td>${new Date(item.time).toLocaleString("en-US", {
                year: "numeric",
                month: "2-digit",
                day: "2-digit",
                hour: "2-digit",
                minute: "2-digit",
                second: "2-digit",
                hour12: false
              }).replace(/(\d{2})\/(\d{2})\/(\d{4}),/, "$3-$1-$2")}
              </td>
            `;
            tableBody.appendChild(row);
          });
        })
        .catch(error => {
          console.error("Error fetching log data:", error);
          alert("Unable to fetch log data. Please try again later.");
        });
    });
  </script>
</body>

</html>