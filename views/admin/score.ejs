<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>積分紀錄</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: #ffffff;
      border: 1px solid #cccccc;
    }

    th,
    td {
      padding: 10px;
      text-align: center;
      border: 1px solid #cccccc;
    }

    th {
      background-color: #007bff;
      color: #ffffff;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #e3f2fd;
    }

    tr:hover {
      background-color: #bbdefb;
    }

    button {
      padding: 5px 10px;
      background-color: #dc3545;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 3px;
    }

    button:hover {
      background-color: #c82333;
    }
  </style>
</head>

<body>
  <h1>積分紀錄</h1>
  <table id="logTable">
    <thead>
      <tr>
        <th>競賽項目</th>
        <th>隊伍</th>
        <th>分數</th>
        <th>時間</th>
        <th></th>
      </tr>
    </thead>
    <tbody id="tableBody">
      <!-- Data will be dynamically inserted here -->
    </tbody>
  </table>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      fetch("/api/score-record")
        .then(response => response.json())
        .then(data => {
          const tableBody = document.querySelector("#tableBody");
          data.forEach(item => {
            const row = document.createElement("tr");
            row.innerHTML = `
              <td>${item.competition}</td>
              <td>${item.team}</td>
              <td>${item.score}</td>
              <td>${new Date(item.time).toLocaleString("zh-TW", {
                year: "numeric",
                month: "2-digit",
                day: "2-digit",
                hour: "2-digit",
                minute: "2-digit",
                second: "2-digit",
                hour12: false
              }).replace(/(\d{4})\/(\d{2})\/(\d{2}),/, "$1-$2-$3")}
              </td>
              <td><button onclick="confirmDelete('${item._id}')">刪除</button></td>
            `;
            tableBody.appendChild(row);
          });
        })
        .catch(error => {
          console.error("Error fetching log data:", error);
          alert("無法獲取資料。請稍後再試。");
        });
    });

    function confirmDelete(id) {
      if (confirm("確定要刪除這筆資料嗎？")) {
        deleteScore(id);
      }
    }

    function deleteScore(id) {
      fetch(`/api/score-record/${id}`, {
        method: "PATCH"
      })
        .then(response => {
          if (response.ok) {
            location.reload();
          } else {
            alert("Failed to delete the data.");
          }
        })
        .catch(error => {
          console.error("Error deleting the score:", error);
          alert("無法刪除資料。請稍後再試。");
        });
    }
  </script>

</body>

</html>