<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>已刪除積分紀錄</title>
  <style>
    html {
      min-width: 768px;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: #ffffff;
      border: 1px solid #cccccc;
    }

    th,
    td {
      padding: 10px;
      text-align: center;
      border: 1px solid #cccccc;
    }

    th {
      background-color: #007bff;
      color: #ffffff;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #e3f2fd;
    }

    tr:hover {
      background-color: #bbdefb;
    }

    button {
      padding: 5px 10px;
      background-color: #28a745;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 3px;
    }

    button:hover {
      background-color: #218838;
    }

    .button-container {
      text-align: right;
      margin-top: 20px;
    }

    .button-container button {
      background-color: #28a745;
    }

    .button-container button:hover {
      background-color: #218838;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header button {
      background-color: #28a745;
    }

    .header button:hover {
      background-color: #218838;
    }
  </style>
</head>

<body>
  <h1>已刪除積分紀錄</h1>
  <div class="button-container">
    <button onclick="window.location.href='/admin/score'">查看積分紀錄</button>
    <button onclick="window.location.href='/admin'">回後台首頁</button>
  </div>
  <table id="deletedLogTable">
    <thead>
      <tr>
        <th>競賽項目</th>
        <th>隊伍</th>
        <th>分數</th>
        <th>時間</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody id="deletedTableBody">
    </tbody>
  </table>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      fetch("/api/deleted-score-record")
        .then(response => response.json())
        .then(result => result.data)
        .then(data => {
          const tableBody = document.querySelector("#deletedTableBody");
          data.forEach(item => {
            const row = document.createElement("tr");
            row.innerHTML = `
              <td>${item.competition}</td>
              <td>${item.team}</td>
              <td>${item.score}</td>
              <td>${new Date(item.time).toLocaleString("en-US", {
                year: "numeric",
                month: "2-digit",
                day: "2-digit",
                hour: "2-digit",
                minute: "2-digit",
                second: "2-digit",
                hour12: false
              }).replace(/(\d{2})\/(\d{2})\/(\d{4}),/, "$3-$1-$2")}
              </td>
              <td><button onclick="restoreScore('${item._id}')">復原</button></td>
            `;
            tableBody.appendChild(row);
          });
        })
        .catch(error => {
          console.error("Error fetching deleted log data:", error);
          alert("無法獲取已刪除資料。請稍後再試。");
        });
    });

    function restoreScore(id) {
      fetch(`/api/restore-score-record/${id}`, {
        method: "PATCH"
      })
        .then(response => {
          if (response.ok) {
            location.reload();
          } else {
            alert("Failed to restore the data.");
          }
        })
        .catch(error => {
          console.error("Error restoring the score:", error);
          alert("無法復原資料。請稍後再試。");
        });
    }
  </script>

</body>

</html>
