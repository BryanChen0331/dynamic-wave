<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>登入紀錄</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: #ffffff;
      border: 1px solid #cccccc;
    }

    th,
    td {
      padding: 10px;
      text-align: center;
      border: 1px solid #cccccc;
    }

    th {
      background-color: #007bff;
      color: #ffffff;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #e3f2fd;
    }

    tr:hover {
      background-color: #bbdefb;
    }
  </style>
</head>

<body>
  <h1>登入紀錄</h1>
  <table id="dataTable">
    <thead>
      <tr>
        <th>用戶名</th>
        <th>時間</th>
      </tr>
    </thead>
    <tbody id="tableBody">
    </tbody>
  </table>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      fetch("/api/sign-in-history")
        .then(response => response.json())
        .then(data => {
          const tableBody = document.querySelector("#tableBody");
          data.forEach(item => {
            const row = document.createElement("tr");
            row.innerHTML = `
              <td>${item.username}</td>
              <td>${new Date(item.time).toLocaleString("zh-TW", {
                year: "numeric",
                month: "2-digit",
                day: "2-digit",
                hour: "2-digit",
                minute: "2-digit",
                second: "2-digit",
                hour12: false
              }).replace(/(\d{4})\/(\d{2})\/(\d{2}),/, "$1-$2-$3")}
              </td>
              `;
            tableBody.appendChild(row);
          });
        })
        .catch(error => {
          console.error("Error fetching data:", error);
          alert("無法獲取資料。請稍後再試。");
        });
    });
  </script>
</body>

</html>