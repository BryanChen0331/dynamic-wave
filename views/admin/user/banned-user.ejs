<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>用戶管理</title>
  <style>
    html {
      min-width: 1024px;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: #ffffff;
      border: 1px solid #cccccc;
    }

    th,
    td {
      padding: 10px;
      text-align: center;
      border: 1px solid #cccccc;
    }

    th {
      background-color: #007bff;
      color: #ffffff;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #e3f2fd;
    }

    tr:hover {
      background-color: #bbdefb;
    }

    button {
      padding: 5px 10px;
      background-color: #28a745;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 3px;
    }

    button:hover {
      background-color: #218838;
    }

    .button-container {
      text-align: right;
      margin-top: 20px;
    }

    .button-container button {
      background-color: #28a745;
    }

    .button-container button:hover {
      background-color: #218838;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header button {
      background-color: #28a745;
    }

    .header button:hover {
      background-color: #218838;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="header">
      <h1>用戶管理</h1>
      <div>
        <button onclick="window.location.href='/admin/user/active-user'">查看用戶</button>
        <button onclick="window.location.href='/admin/user/pending-user'">查看待審核用戶</button>
        <button onclick="window.location.href='/admin'">回後台首頁</button>
      </div>
    </div>
    <table>
      <thead>
        <tr>
          <th>用戶名</th>
          <th>權限</th>
          <th>狀態</th>
          <th>註冊時間</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody id="userTableBody">
      </tbody>
    </table>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("/api/user/banned")
        .then(response => response.json())
        .then(({ data }) => {
          const userTableBody = document.querySelector("#userTableBody");
          data.forEach(item => {
            const row = document.createElement("tr");
            row.innerHTML = `
              <td>${item.username}</td>
              <td>${item.permission}</td>
              <td>${item.status}</td>
              <td>${new Date(item.time).toLocaleString("en-US", {
                year: "numeric",
                month: "2-digit",
                day: "2-digit",
                hour: "2-digit",
                minute: "2-digit",
                second: "2-digit",
                hour12: false
              }).replace(/(\d{2})\/(\d{2})\/(\d{4}),/, "$3-$1-$2")}
              </td>
              <td>
                ${item.permission !== "manager" ? `<button onclick="unbanUser('${item._id}')">解除封禁</button>` : ''}
              </td>
            `;
            userTableBody.appendChild(row);
          });
        })
        .catch(error => {
          console.error("獲取用戶列表時發生錯誤:", error);
        });
    });

    function unbanUser(userId) {
      fetch(`/api/user/unban/${userId}`, { method: "POST" })
        .then(response => response.json())
        .then(({ message }) => {
          alert(message);
          location.reload();
        })
        .catch(error => {
          console.error("解除封禁用戶時發生錯誤:", error);
        });
    }
  </script>
</body>

</html>
