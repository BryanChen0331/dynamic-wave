<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>測驗資料</title>
  <style>
    html {
      min-width: 1024px;
    }
    
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: #ffffff;
      border: 1px solid #cccccc;
    }

    th,
    td {
      padding: 10px;
      text-align: center;
      border: 1px solid #cccccc;
    }

    th {
      background-color: #007bff;
      color: #ffffff;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #e3f2fd;
    }

    tr:hover {
      background-color: #bbdefb;
    }

    button {
      padding: 5px 10px;
      background-color: #dc3545;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 3px;
    }

    button:hover {
      background-color: #c82333;
    }

    .button-container {
      text-align: right;
      margin-top: 20px;
    }

    .button-container button {
      background-color: #28a745;
    }

    .button-container button:hover {
      background-color: #218838;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header button {
      background-color: #28a745;
    }

    .header button:hover {
      background-color: #218838;
    }
  </style>
</head>

<body>
  <h1>測驗資料</h1>
  <div class="button-container">
    <button onclick="window.location.href='/admin/deleted-data'">查看已刪除測驗資料</button>
    <button onclick="window.location.href='/admin'">回後台首頁</button>
  </div>
  <table id="dataTable">
    <thead>
      <tr>
        <th>用戶名</th>
        <th>選項</th>
        <th>冒險</th>
        <th>社交</th>
        <th>創造力</th>
        <th>策略</th>
        <th>情感</th>
        <th>直覺</th>
        <th>角色</th>
        <th>隊伍</th>
        <th>時間</th>
        <th></th>
      </tr>
    </thead>
    <tbody id="tableBody">
    </tbody>
  </table>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      fetch("/api/data")
        .then(response => response.json())
        .then(data => {
          const tableBody = document.querySelector("#tableBody");
          data.forEach(item => {
            const row = document.createElement("tr");
            row.innerHTML = `
              <td>${item.username}</td>
              <td>${item.options.join(", ")}</td>
              <td>${item.attributes.adventure}</td>
              <td>${item.attributes.social}</td>
              <td>${item.attributes.creativity}</td>
              <td>${item.attributes.strategy}</td>
              <td>${item.attributes.emotion}</td>
              <td>${item.attributes.intuition}</td>
              <td>${item.character}</td>
              <td>${item.team}</td>
              <td>${new Date(item.time).toLocaleString("en-US", {
                year: "numeric",
                month: "2-digit",
                day: "2-digit",
                hour: "2-digit",
                minute: "2-digit",
                second: "2-digit",
                hour12: false
              }).replace(/(\d{2})\/(\d{2})\/(\d{4}),/, "$3-$1-$2")}
              </td>
              <td><button class="delete" onclick="deleteData('${item._id}')">刪除</button></td>
            `;
            if (item.deleted) {
              row.classList.add("deleted");
            }
            tableBody.appendChild(row);
          });
        })
        .catch(error => {
          console.error("Error fetching data:", error);
          alert("測驗資料抓取失敗，請稍後再試。");
        });
    });

    function deleteData(id) {
      if (confirm("確定要刪除這筆測驗資料嗎？")) {
        fetch(`/api/data/${id}`, {
          method: "PATCH",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ deleted: true })
        })
          .then(response => {
            if (response.ok) {
              location.reload();
            } else {
              alert("Failed to delete the data.");
            }
          })
          .catch(error => {
            console.error("Error deleting the data:", error);
            alert("無法刪除測驗資料，請稍後再試。");
          });
      }
    }
  </script>
</body>

</html>
